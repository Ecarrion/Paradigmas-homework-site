<h1> Add a Homework </h1>

<%= form_for @homework do |f| -%>
  
  <%= render "shared/errors", :object => f.object %>
  
  <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :file,  "Select your file" %> <br />
    <%= f.text_field :file %>
  </div>
  
  <div class="actions">
    <%= f.submit "Add" %>
  </div>
  
<% end -%>
