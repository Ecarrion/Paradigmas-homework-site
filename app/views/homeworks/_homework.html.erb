<p>
    Name: <%= homework.name %> <br />
    Uploaded at: <%= homework.created_at %> <br>
    <%= link_to 'Download', homework.file.url %>
    <% if current_user.id == homework.user.id -%>
      | <%= link_to 'Delete', homework, :method => :delete, :confirm => "Are you sure?",
                                      :title => "Delete #{homework.name}" %>
    <% end -%>
</p>
